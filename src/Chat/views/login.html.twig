{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <form action="{{ path('chat.login') }}" method="post">
                <div class="form-group row">
                    <label for="login" class="col-sm-4 col-form-label">Login</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="login" value="" name="username">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-4 col-form-label">Mot de passe</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                </div>
                <div class="form-group row">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

        </div>


    </div>

{% endblock %}

